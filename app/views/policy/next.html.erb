<br>

<div class="row">
<div class="span8 offset2">
<div class="well">

<%=render "shared/flash_notice"%>

<h3>New Policy</h3><p align="right"><%= link_to "Create a New Number List", phone_list_show_path(@policy.id), :class => "btn" %></p>
<br>
<div class="well">
  <h4>Add Call Settings To New Policy</h4>
  <br>
  <div class="well">
    <h4>Authorised for Inbound calls</h4> 
    <br>
    <%=form_for @policy, :url => policy_updateaddcallinbound_path(@policy.id) do |f| %>
      <%= f.select :phonelist_id, options_for_select(phonelist)%>
      <%= f.hidden_field :id, :value => @policy.id %>
      <br>
      <%= f.submit "Add List", :class => "btn btn-small btn-warning"%> 
    <%end%>
    <br>
    <h4>Phone list(s) used</h4>
      <table class="table table-bordered table-striped">
        <tbody>
          <%unless @inboundCallsphonelist_ids == [] %>
            <%@inboundCallsphonelist_ids.each do |id| %>
              <tr>
                <td><%=phonelist_id(id)%></td><td><%= link_to 'Remove List',policy_updatecallinbound_path([@policy.id, id, "next"]),:class=>"btn btn-small btn-danger" %></td>
              </tr>
            <%end%>
          <%else%>
            <tr>
              <td>NO LISTS CURRENTLY ASSIGNED TO POLICY</td>
            </tr>
          <%end%>

        </tbody>
      </table>
  </div>



  <div class="well">
    <h4>Authorised for Outbound calls</h4> 
    <br>
    <%=form_for @policy, :url => policy_updateaddcalloutbound_path(@policy.id) do |f| %>
    <%= f.select :phonelist_id, options_for_select(phonelist)%>
    <%= f.hidden_field :id, :value => @policy.id %>
    <br>
    <%= f.submit "Add List", :class => "btn btn-small btn-warning"%> 
    <%end%>
 <br>
 <h4>Phone list(s) used</h4>
<table class="table table-bordered table-striped">
  <tbody>
 <%unless @outboundCallsphonelist_ids == []%>
 <%@outboundCallsphonelist_ids.each do |id| %>
 <tr>
 <td><%=phonelist_id(id)%></td><td><%= link_to 'Remove List',policy_updatecalloutbound_path([@policy.id, id, "next"]),:class=>"btn btn-small btn-danger" %></td>
</tr>
 <%end%>
 <%else%>
            <tr>
              <td>NO LISTS CURRENTLY ASSIGNED TO POLICY</td>
            </tr>
 <%end%>
</tbody>
</table>
</div>
</div>



