<br>

<div class="row">
<div class="span6 offset3">
<div class="well">

<%=render "shared/flash_notice"%>
<h3>New Policy</h3>
<br>
<%= form_for @policy, :url => policy_create_path do |f| %>
  <%= f.label "Policy Name" %>
  <%= f.text_field :name %>
  <br>
 <div class="well">
 <h4>Device Lock Settings</h4>
 <br>
 <label class="radio inline"> <%= f.radio_button :name, true, :id=>"optionsRadios1" %> On </label>
 <label class="radio inline"> <%= f.radio_button :name, false, :id=>"optionsRadios2"  %> Off </label>
 <br>
 <br>
  <%= f.label "Pin Number" %>
  <%= f.text_field :name, :class => "input-mini"%>
 </div>

 <div class="well">
 <h4>Call Settings</h4>
 <div class="well">
  <%= f.label "Authorised Numbers Inbound" %>
 <div id="inbound_calls">
<%= f.fields_for :calls_inbound_msisdns do |builder| %>
<p class="fields">
MSISDN: <%= builder.text_field :msisdn %> 
<%= link_to_remove_fields "remove", builder %>
</p>
<%end%>
 <%= link_to_add_fields "Add MSISDN", f, :calls_inbound_msisdns %>
 </div>
  </div>

  <div class="well">
  <%= f.label "Authorised Numbers Outbound" %>
 <div id="Outbound_calls">
<%= f.fields_for :calls_inbound_msisdns do |builder| %>
<p class="fields">
MSISDN: <%= builder.text_field :msisdn %> 
<%= link_to_remove_fields "remove", builder %>
</p>
<%end%>
 <%= link_to_add_fields "Add MSISDN", f, :calls_inbound_msisdns %>
 </div>
   </div>
  <%= f.label "Call Time Window" %>
  <%= f.text_field :name %>
</div>

 <div class="well">
 <h4>Messaging Settings</h4>
  <div class="well">
  <%= f.label "Authorised Numbers Inbound" %>
 <div id="Outbound_calls">
<%= f.fields_for :calls_inbound_msisdns do |builder| %>
<p class="fields">
MSISDN: <%= builder.text_field :msisdn %> 
<%= link_to_remove_fields "remove", builder %>
</p>
<%end%>
 <%= link_to_add_fields "Add MSISDN", f, :calls_inbound_msisdns %>
 </div>
   </div>
  <div class="well">
  <%= f.label "Authorised Numbers Outbound" %>
 <div id="Outbound_calls">
<%= f.fields_for :calls_inbound_msisdns do |builder| %>
<p class="fields">
MSISDN: <%= builder.text_field :msisdn %> 
<%= link_to_remove_fields "remove", builder %>
</p>
<%end%>
 <%= link_to_add_fields "Add MSISDN", f, :calls_inbound_msisdns %>
 </div>
   </div>
  <%= f.label "Call Time Window" %>
  <%= f.text_field :name %>
</div>
<br>
  <%= f.hidden_field :account_id, :value => current_account.id %>
  <%= f.submit "create", :class => "btn"%>
<% end %>
</div>
</div>
